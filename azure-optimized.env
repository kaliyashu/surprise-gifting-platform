# ðŸš€ Optimized Azure Cloud Configuration for Surprise Gifting Platform
# Maximizes free tier benefits, security, and performance for students

# =============================================================================
# AZURE SERVICES CONFIGURATION (OPTIMIZED FOR FREE TIER)
# =============================================================================

# Azure App Service Configuration (F1 Free Tier)
NODE_ENV=production
PORT=8080
CLIENT_URL=https://surprise-gifting-static.azurestaticapps.net

# =============================================================================
# AZURE DATABASE FOR POSTGRESQL (BURSTABLE FREE TIER)
# =============================================================================
DB_HOST=surprise-gifting-db.postgres.database.azure.com
DB_PORT=5432
DB_NAME=surprise_moments
DB_USER=postgres
DB_PASSWORD=YourSecurePassword123!
DB_SSL=true
DB_SSL_CA=
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_STATEMENT_TIMEOUT=30000

# =============================================================================
# AZURE BLOB STORAGE (5GB FREE TIER + LIFECYCLE MANAGEMENT)
# =============================================================================
AZURE_STORAGE_ACCOUNT=surprisegiftingstorage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=surprisegiftingstorage;AccountKey=YOUR_STORAGE_KEY;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_UPLOADS=uploads
AZURE_STORAGE_CONTAINER_ASSETS=assets
AZURE_STORAGE_CONTAINER_PUBLIC=public
AZURE_STORAGE_ACCOUNT_KEY=YOUR_STORAGE_KEY
AZURE_STORAGE_ENABLE_CDN=true
AZURE_STORAGE_ENABLE_LIFECYCLE=true

# =============================================================================
# AZURE KEY VAULT (10K OPERATIONS/MONTH FREE)
# =============================================================================
AZURE_KEY_VAULT_NAME=surprise-gifting-kv
AZURE_TENANT_ID=YOUR_TENANT_ID
AZURE_CLIENT_ID=YOUR_CLIENT_ID
AZURE_CLIENT_SECRET=YOUR_CLIENT_SECRET
AZURE_KEY_VAULT_ENABLE_RBAC=true
AZURE_KEY_VAULT_ENABLE_SOFT_DELETE=true

# =============================================================================
# AZURE APPLICATION INSIGHTS (5GB DATA/MONTH FREE)
# =============================================================================
AZURE_APP_INSIGHTS_CONNECTION_STRING=YOUR_APP_INSIGHTS_CONNECTION_STRING
AZURE_APP_INSIGHTS_INSTRUMENTATION_KEY=YOUR_INSTRUMENTATION_KEY
AZURE_APP_INSIGHTS_ENABLE_PERFORMANCE_MONITORING=true
AZURE_APP_INSIGHTS_ENABLE_ERROR_TRACKING=true
AZURE_APP_INSIGHTS_ENABLE_USER_ANALYTICS=true

# =============================================================================
# AZURE CDN (5GB BANDWIDTH/MONTH FREE)
# =============================================================================
AZURE_CDN_ENDPOINT=https://surprise-gifting-cdn-endpoint.azureedge.net
AZURE_CDN_ENABLE_COMPRESSION=true
AZURE_CDN_ENABLE_CACHING=true
AZURE_CDN_CACHE_DURATION=86400

# =============================================================================
# AZURE FUNCTIONS (1M REQUESTS/MONTH FREE)
# =============================================================================
AZURE_FUNCTIONS_URL=https://surprise-gifting-functions.azurewebsites.net
AZURE_FUNCTIONS_KEY=YOUR_FUNCTIONS_KEY
AZURE_FUNCTIONS_ENABLE_AUTH=true

# =============================================================================
# AZURE ACTIVE DIRECTORY B2C (50K MAU FREE)
# =============================================================================
AZURE_AD_B2C_TENANT=surprisegifting.onmicrosoft.com
AZURE_AD_B2C_CLIENT_ID=YOUR_B2C_CLIENT_ID
AZURE_AD_B2C_CLIENT_SECRET=YOUR_B2C_CLIENT_SECRET
AZURE_AD_B2C_SIGN_UP_SIGN_IN_POLICY=B2C_1_signupsignin
AZURE_AD_B2C_ENABLE_MFA=true

# =============================================================================
# SECURITY CONFIGURATION (ENHANCED)
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENABLE_HTTPS_REDIRECT=true
ENABLE_HSTS=true
ENABLE_CONTENT_SECURITY_POLICY=true
ENABLE_XSS_PROTECTION=true
ENABLE_FRAME_OPTIONS=true

# =============================================================================
# EMAIL CONFIGURATION (AZURE SENDGRID FREE TIER)
# =============================================================================
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=YOUR_SENDGRID_API_KEY
EMAIL_FROM=Surprise Moments <noreply@surprisemoments.com>
EMAIL_ENABLE_TLS=true

# =============================================================================
# FILE UPLOAD CONFIGURATION (OPTIMIZED)
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ENABLE_FILE_VALIDATION=true
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,application/pdf
ENABLE_VIRUS_SCANNING=false

# =============================================================================
# SECURITY SETTINGS (ENHANCED)
# =============================================================================
CORS_ORIGIN=https://surprise-gifting-static.azurestaticapps.net
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_RATE_LIMITING=true
ENABLE_BRUTE_FORCE_PROTECTION=true
SESSION_SECRET=your-super-secret-session-key-here
SESSION_MAX_AGE=86400000

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_DURATION=3600
ENABLE_QUERY_OPTIMIZATION=true
ENABLE_CONNECTION_POOLING=true
ENABLE_LOAD_BALANCING=true

# =============================================================================
# MONITORING AND LOGGING (ENHANCED)
# =============================================================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
ENABLE_USER_ANALYTICS=true
ENABLE_COST_MONITORING=true
ENABLE_SECURITY_MONITORING=true

# =============================================================================
# FRONTEND CONFIGURATION (OPTIMIZED)
# =============================================================================
REACT_APP_API_URL=https://surprise-gifting-app.azurewebsites.net/api
REACT_APP_ENVIRONMENT=production
REACT_APP_AZURE_AD_B2C_TENANT=surprisegifting.onmicrosoft.com
REACT_APP_AZURE_AD_B2C_CLIENT_ID=YOUR_B2C_CLIENT_ID
REACT_APP_CDN_URL=https://surprise-gifting-cdn-endpoint.azureedge.net
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_OFFLINE_SUPPORT=true

# =============================================================================
# DATABASE OPTIMIZATION (AZURE POSTGRESQL)
# =============================================================================
DB_ENABLE_CONNECTION_POOLING=true
DB_ENABLE_QUERY_OPTIMIZATION=true
DB_ENABLE_READ_REPLICAS=false
DB_ENABLE_BACKUP=true
DB_BACKUP_RETENTION_DAYS=7
DB_ENABLE_SSL=true
DB_ENABLE_LOGGING=true

# =============================================================================
# STORAGE OPTIMIZATION (AZURE BLOB)
# =============================================================================
AZURE_STORAGE_ENABLE_VERSIONING=false
AZURE_STORAGE_ENABLE_SNAPSHOTS=false
AZURE_STORAGE_ENABLE_DELETE_RETENTION=true
AZURE_STORAGE_DELETE_RETENTION_DAYS=7
AZURE_STORAGE_ENABLE_ACCESS_TIERING=false
AZURE_STORAGE_ENABLE_REPLICATION=false

# =============================================================================
# NETWORK SECURITY (AZURE)
# =============================================================================
AZURE_ENABLE_FIREWALL=true
AZURE_ENABLE_PRIVATE_ENDPOINTS=false
AZURE_ENABLE_VNET_INTEGRATION=false
AZURE_ENABLE_DDOS_PROTECTION=false
AZURE_ENABLE_NETWORK_WATCHER=false

# =============================================================================
# COST OPTIMIZATION (FREE TIER)
# =============================================================================
AZURE_ENABLE_AUTO_SCALING=false
AZURE_ENABLE_COST_ALERTS=true
AZURE_MONTHLY_BUDGET=5
AZURE_ENABLE_RESOURCE_GROUP_POLICIES=false
AZURE_ENABLE_TAG_MANAGEMENT=false

# =============================================================================
# BACKUP AND DISASTER RECOVERY
# =============================================================================
AZURE_ENABLE_BACKUP=false
AZURE_ENABLE_SITE_RECOVERY=false
AZURE_ENABLE_GEO_REPLICATION=false
AZURE_BACKUP_RETENTION_DAYS=7
AZURE_ENABLE_POINT_IN_TIME_RESTORE=false

# =============================================================================
# COMPLIANCE AND GOVERNANCE
# =============================================================================
AZURE_ENABLE_AUDIT_LOGGING=true
AZURE_ENABLE_COMPLIANCE_SCANNING=false
AZURE_ENABLE_POLICY_ENFORCEMENT=false
AZURE_ENABLE_RBAC=true
AZURE_ENABLE_ACCESS_REVIEWS=false
